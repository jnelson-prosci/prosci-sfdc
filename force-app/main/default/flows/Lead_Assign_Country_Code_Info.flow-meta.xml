<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <assignments>
        <description>Assigns the Country Name, Queue Family, and Languages from the relevant Country Code Info metatdata to the new Lead</description>
        <name>Assign_Country_Code_Info</name>
        <label>Assign Country Code Info</label>
        <locationX>50</locationX>
        <locationY>503</locationY>
        <assignmentItems>
            <assignToReference>$Record.Country_Name__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>countryNameAssignment</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>$Record.Queue_Family__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>queueFamilyAssignment</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>$Record.Languages__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>languageAssignment</elementReference>
            </value>
        </assignmentItems>
    </assignments>
    <decisions>
        <description>Ensures a Country Code Info record exists for the selected Country Code and that no value has already been entered for the fields to be assigned</description>
        <name>Validate_for_Assignment</name>
        <label>Validate for Country Code Info Assignment</label>
        <locationX>182</locationX>
        <locationY>395</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Valid_for_Assignment</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Country_Code_Metadata_Info.Id</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Assign_Country_Code_Info</targetReference>
            </connector>
            <label>Is Valid for Assignment</label>
        </rules>
    </decisions>
    <description>Before Save flow to assign relevant Country Code Info from metadata to new Lead records</description>
    <environments>Default</environments>
    <formulas>
        <description>If the Country Name field is null, a value will be assigned using the related MDT record.</description>
        <name>countryNameAssignment</name>
        <dataType>String</dataType>
        <expression>IF(ISNULL({!$Record.Country_Name__c}), {!Get_Country_Code_Metadata_Info.Country_Name__c}, {!$Record.Country_Name__c})</expression>
    </formulas>
    <formulas>
        <description>If the Language field is null, a value will be assigned using the related MDT record.</description>
        <name>languageAssignment</name>
        <dataType>String</dataType>
        <expression>IF(ISNULL({!$Record.Languages__c}), {!Get_Country_Code_Metadata_Info.Language__c}, {!$Record.Languages__c})</expression>
    </formulas>
    <formulas>
        <description>If the Queue Family field is null, a value will be assigned using the related MDT record.</description>
        <name>queueFamilyAssignment</name>
        <dataType>String</dataType>
        <expression>IF(ISNULL({!$Record.Queue_Family__c}), TEXT({!Get_Country_Code_Metadata_Info.Queue_Family__c}), {!$Record.Queue_Family__c})</expression>
    </formulas>
    <interviewLabel>Lead - Assign Country Code Info {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Lead - Assign Country Code Info</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description>Retrieves Country Code Info mdt record that matches the Lead&apos;s Country Code</description>
        <name>Get_Country_Code_Metadata_Info</name>
        <label>Get Country Code Metadata Info</label>
        <locationX>182</locationX>
        <locationY>287</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Validate_for_Assignment</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>DeveloperName</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Country_Code__c</elementReference>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>Country_Code_Info__mdt</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <start>
        <locationX>56</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Country_Code_Metadata_Info</targetReference>
        </connector>
        <object>Lead</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
